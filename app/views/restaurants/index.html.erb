<div class='mx-4 py-4'>
  <h1>Restaurants List</h1>
  <p>
    <%= link_to "Add new restaurant", new_restaurant_path, class:'btn btn-primary' %>
  </p>

  <ul class="list-group">
    <% @restaurants.each do |rest| %>
      <li class="list-group-item">
        <%= link_to rest.name, restaurant_path(rest) %> (<%= rest.category %>)
      </li>
    <% end %>
  </ul>
</div>
