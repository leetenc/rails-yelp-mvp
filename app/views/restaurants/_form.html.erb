<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, :collection =>
    [
      ['Chinese', 'chinese'],
      ['Italian', 'italian'],
      ['Japanese', 'japanese'],
      ['French', 'french'],
      ['Belgian', 'belgian']
    ]
  %>
  <br>
  <%= f.submit "Update Restaurant", class: "btn btn-primary"%>
  <br>
<% end %>
